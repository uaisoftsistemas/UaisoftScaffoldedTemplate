@page "/delete@Model.EntityName/{id:int}"
@inject NavigationManager Navigation
@inject I@Model.EntityNameService @Model.EntityNameService

<h3>Delete @Model.EntityName</h3>

<p>Are you sure you want to delete this @Model.EntityName?</p>

<DxButton Click="Delete@Model.EntityName" Text="Delete" CssClass="btn-danger" />
<DxButton Click="Cancel" Text="Cancel" CssClass="btn-secondary" />

@code {
    [Parameter]
    public int Id { get; set; }

    private async Task Delete@Model.EntityName()
    {
        await @Model.EntityNameService.Delete@Model.EntityName(Id);
        Navigation.NavigateTo("/");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/");
    }
}
